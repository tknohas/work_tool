%h2.text-center.mt-4 やること一覧
.container
  .row
    .col-6
      .card
        .card-body
          = simple_form_for @task do |f|
            = render 'shared/error_messages', resource: @task
            = f.input :title
            = f.input :description
            .text-center
              = f.submit class: 'btn btn-primary'
    .col-6
      %table.table.table-striped.table-hover
        %thead.table-light
          %tr
            %th やること
            %th 登録日
        %tbody
          - @tasks.each do |task|
            %tr
              %td= link_to task.title, task_path(task), class: 'text-decoration-none'
              %td= task.created_at.strftime('%Y/%m/%d')
